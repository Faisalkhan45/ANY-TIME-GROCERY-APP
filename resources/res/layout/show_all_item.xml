<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:padding="5dp" android:layout_width="match_parent" android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView android:padding="5dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:gravity="center" android:orientation="vertical" android:background="#ededed" android:padding="15dp" android:layout_width="match_parent" android:layout_height="wrap_content">
            <ImageView android:id="@+id/item_image" android:layout_width="300dp" android:layout_height="200dp" android:scaleType="centerCrop" app:srcCompat="@drawable/ic_launcher_foreground"/>
            <TextView android:textSize="18sp" android:textColor="#673ab7" android:id="@+id/item_cost" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="$ 34.0" android:fontFamily="@font/amethysta"/>
            <TextView android:textSize="18sp" android:id="@+id/item_nam" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Woman T shirt" android:fontFamily="@font/amethysta"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
