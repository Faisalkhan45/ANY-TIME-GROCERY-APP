<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="5dp" android:elevation="4dp" app:cardCornerRadius="5dp">
    <LinearLayout android:orientation="vertical" android:background="#fb9fde" android:padding="7dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="match_parent" android:weightSum="2">
            <TextView android:textSize="16sp" android:textStyle="bold" android:textColor="@color/black" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Current Date: " android:layout_weight="1" android:fontFamily="@font/amethysta"/>
            <TextView android:textSize="16sp" android:textStyle="bold" android:textColor="@color/black" android:id="@+id/current_date" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Current Date: " android:layout_weight="1" android:fontFamily="@font/amethysta"/>
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="match_parent" android:weightSum="2">
            <TextView android:textSize="16sp" android:textStyle="bold" android:textColor="@color/black" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Current Time: " android:layout_weight="1" android:fontFamily="@font/amethysta"/>
            <TextView android:textSize="16sp" android:textStyle="bold" android:textColor="@color/black" android:id="@+id/current_time" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Current Time: " android:layout_weight="1" android:fontFamily="@font/amethysta"/>
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="match_parent" android:weightSum="2">
            <TextView android:textSize="16sp" android:textStyle="bold" android:textColor="@color/black" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Product Name: " android:layout_weight="1" android:fontFamily="@font/amethysta"/>
            <TextView android:textSize="16sp" android:textStyle="bold" android:textColor="@color/black" android:id="@+id/product_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Current Date: " android:layout_weight="1" android:fontFamily="@font/amethysta"/>
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="match_parent" android:weightSum="2">
            <TextView android:textSize="16sp" android:textStyle="bold" android:textColor="@color/black" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Product Price: " android:layout_weight="1" android:fontFamily="@font/amethysta"/>
            <TextView android:textSize="16sp" android:textStyle="bold" android:textColor="@color/black" android:id="@+id/product_price" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Current Date: " android:layout_weight="1" android:fontFamily="@font/amethysta"/>
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="match_parent" android:weightSum="2">
            <TextView android:textSize="16sp" android:textStyle="bold" android:textColor="@color/black" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Total Price " android:layout_weight="1" android:fontFamily="@font/amethysta"/>
            <TextView android:textSize="16sp" android:textStyle="bold" android:textColor="@color/black" android:id="@+id/total_price" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Total price " android:layout_weight="1" android:fontFamily="@font/amethysta"/>
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="match_parent" android:weightSum="2">
            <TextView android:textSize="16sp" android:textStyle="bold" android:textColor="@color/black" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Total Quantity " android:layout_weight="1" android:fontFamily="@font/amethysta"/>
            <TextView android:textSize="16sp" android:textStyle="bold" android:textColor="@color/black" android:id="@+id/total_quantity" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Total Quantity" android:layout_weight="1" android:fontFamily="@font/amethysta"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
